<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:background="@color/colorWhite"
            android:elevation="10dp"
            android:orientation="vertical">
            <TextView
                android:paddingLeft="5dp"
                android:gravity="fill"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="이메일 인증"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray" />
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/et_find_pw_email"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Email"
                    android:background="@drawable/edit_border_line"
                    />
                <Button
                    android:id="@+id/btn_find_pw_email"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이메일로 인증 보내기"
                    android:background="@color/colorGray"
                    android:textColor="@color/colorWhite"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/et_find_pw_code"
                        android:paddingLeft="10dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="Code"
                        android:background="@drawable/edit_border_line"/>
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="3:00"
                        android:background="@color/colorGrayLight"
                        android:textColor="@color/colorWhite"/>
                    <Button
                        android:id="@+id/btn_find_pw_code"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="인증"
                        android:background="@color/colorGray"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginRight="21dp"
            android:layout_marginLeft="21dp"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:elevation="10dp">
            <TextView
                android:paddingLeft="5dp"
                android:gravity="fill"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="비밀번호"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp">
                <TextView
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6자 이상, 영문/숫자/특수문자 조합" />
                <EditText
                    android:id="@+id/et_find_pw_password"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="PW"
                    android:background="@drawable/edit_border_line"/>

                <EditText
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:hint="PW"
                    android:background="@drawable/edit_border_line"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>