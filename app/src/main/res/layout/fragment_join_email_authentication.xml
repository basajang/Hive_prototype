<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_join_email"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Email"
            android:background="@drawable/edit_border_line"
            />
        <Button
            android:id="@+id/btn_join_email_auth"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="이메일로 인증 보내기"
            android:background="@color/colorGray"
            android:textColor="@color/colorWhite"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_join_email_code"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Code"
                android:background="@drawable/edit_border_line"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3:00"
                android:background="@color/colorGrayLight"
                android:textColor="@color/colorWhite"/>
            <Button
                android:id="@+id/btn_join_email_code_auth"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="인증"
                android:background="@color/colorGray"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
        <TextView
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="인증번호 에러 메시지"
            android:layerType="software"
            android:background="@drawable/layout_dotted_line"/>

    </LinearLayout>

</LinearLayout>