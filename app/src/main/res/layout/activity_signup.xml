<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--회원가입 화면-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/colorWhite">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="21dp"
                android:layout_marginLeft="21dp"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:background="@drawable/layout_round_white"
                android:elevation="10dp">
                <EditText
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Name"
                    android:background="@drawable/edit_border_line"/>
                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginLeft="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="ID"
                        android:background="@drawable/edit_border_line"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="중복"
                        android:background="@color/colorGray"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_signup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="@color/colorGrayLight"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="@color/colorBlack"
                    app:tabTextColor="#000000"
                    />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/layout_round_white"
                android:elevation="10dp">
                <TextView
                    android:layout_marginLeft="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="비밀번호"
                    android:gravity="fill"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6자 이상, 영문/숫자/특수문자 조합"
                    android:gravity="center"/>

                <EditText
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_border_line"/>

                <EditText
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_border_line"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가입완료"
            android:background="@color/colorGray"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

</LinearLayout>